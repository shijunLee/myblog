@{
    Layout = "_AdminLayout";
}
@model MyBlog.Model.ViewModel.Admin.UserInfoViewModel


<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Blog管理</a>
            </li>

            <li>
                <a href="#">个人信息管理</a>
            </li>
            <li class="active">帐号密码修改</li>
        </ul><!-- /.breadcrumb -->


    </div>

    <div class="page-content">


        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">

                    <article class="col-md-6" style="padding-left:0px">
                        <form method="post" role="form" action="@Url.Content("~/UserManager/Index")">
                            
                            <input id="userId" class="form-control" value="@Model.UserId" name="userId" type="hidden"  required />

                            <div class="form-group">
                                <input id="userName" class="form-control" name="userName"  value="@Model.UserName"  type="text" placeholder="用户名"  required/>
                            </div>
                            <div class="form-group">
                                <input name="password" id="password" type="password" class="form-control"  placeholder="密码" required /> 
                            </div>
                            <div class="form-group">
                                <input name="confirmPassword" id="confirmPassword" class="form-control" type="password"  placeholder="确认密码" required/>
                            </div> 
                            <div class="form-group">  
                                <input type="submit" value="保存" class="btn btn-primary pull-right" />
                            </div>
                        </form>
                    </article>
                </div>


                <!-- PAGE CONTENT ENDS -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content -->
</div>
